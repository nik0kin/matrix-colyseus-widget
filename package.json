{
  "private": true,
  "engines": {
    "yarn": ">=1.17.3"
  },
  "name": "matrix-colyseus-widget",
  "workspaces": [
    "apps/*",
    "games/*",
    "games/connectx/backend",
    "packages/*"
  ],
  "scripts": {
    "build-packages": "cd packages/utils && yarn build; cd ../common && yarn build",
    "build-docker": "docker build -t niko/mcw .",
    "cloc": "cloc apps/**/src packages/**/src",
    "run-dev-docker": "docker run -p 2567:2567 -d niko/mcw"
  },
  "devDependencies": {
    "lerna": "latest"
  }
}